html
  height 100%
  box-sizing border-box

*,
*::after,
*::before
  box-sizing inherit


body
  height 100%
  margin 0
  background-color #eee

  &.active
    overflow hidden

.container
  position relative
  display flex
  flex-direction column
  min-height 100%
  width 100%
  min-width 500px
  max-width 800px
  margin 0 auto
  padding-bottom 50px
  background-color #fff


.page-header
  flex 0 0 50px
  width 100%
  height 50px
  border-bottom 1px solid #999


.main
  display flex
  min-height 100%
  flex 1 0 100%
  background-color #fff
  overflow hidden


.content
  flex 1 0 calc(100% - 300px)
  padding 15px
  font-size 20px
  transition all 0.25s ease-out

  &.wide
    flex 1 0 100%


.sidebar
  flex 0 0 300px
  width 300px
  border-left 1px solid #ccc
  box-shadow 0 0 15px rgba(51,51,51,0.5)
  opacity 1
  visibility visible
  transition all 0.25s ease-out

  &.hidden
    opacity 0
    visibility hidden
    height 0
    width 0


.page-footer
  position fixed
  z-index 100
  bottom 0
  flex 0 0 50px
  height 50px
  width 100%
  max-width 800px
  min-width 500px
  border-top 1px solid #999
  background-color #fff


.btn
  display inline-block
  vertical-align top
  padding 5px 10px
  border 1px solid #999
  border-radius 3px
  text-decoration none
  background-color #fff

  &:hover
    background-color #eee


.popup-login
  display none
  position fixed
  z-index 1000
  top 0
  left 0
  right 0
  bottom 0
  width 100%
  height 100%
  background-color rgba(255, 204, 0, 0.1)


  &.active
    display block


  &__inner
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    min-width 200px
    min-height 150px
    padding 15px
    background-color #fff


@media screen and (max-width: 700px)
  .sidebar
    opacity 0
    visibility hidden
    height 0
    width 0


  .content
    flex 1 0 100%
